{
  "name": "hiitea-api",
  "version": "0.0.1",
  "description": "A collection of useful API",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist && prisma generate",
    "build": "nest build",
    "heroku-postbuild": "./scripts/heroku-build.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "NODE_ENV=development && nest start --watch",
    "start:dev": "nest start",
    "start:debug": "nest start --debug --watch",
    "start": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabrinaluo/api.git"
  },
  "author": "HiiTea <hi@hiitea.io>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/sabrinaluo/api/issues"
  },
  "homepage": "https://github.com/sabrinaluo/api#readme",
  "dependencies": {
    "@nestjs/bull": "^0.1.2",
    "@nestjs/common": "^7.1.1",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.1.1",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/serve-static": "^2.1.3",
    "@nestjs/swagger": "^4.6.0",
    "@prisma/client": "2.5.1",
    "bull": "^3.18.0",
    "cheerio": "^1.0.0-rc.2",
    "fp-ts": "^2.8.1",
    "helmet": "^4.1.0",
    "io-ts": "^2.2.10",
    "io-ts-types": "^0.5.10",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "ramda": "^0.27.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "swagger-ui-express": "^4.1.4"
